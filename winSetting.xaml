<Window x:Class="VpetChatWithOllama.winSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VpetChatWithOllama" mc:Ignorable="d"
        xmlns:ll="clr-namespace:LinePutScript.Localization.WPF;assembly=LinePutScript.Localization.WPF"
        xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI" 
        Title="{ll:Str 'Chat Ollama Plugin Settings'}" Width="450" FontSize="16" Height="Auto"
        ResizeMode="NoResize" WindowState="Normal" SizeToContent="Height">


    <Window.Resources>
        <ResourceDictionary Source="/VPet-Simulator.Windows.Interface;component/ResourceStyle.xaml" />
    </Window.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" MinHeight="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" MinHeight="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TextBlock Text="API URL" VerticalAlignment="Center" />
        <TextBlock Grid.Row="2" Text="Proxy (Optional)" VerticalAlignment="Center" />
        <TextBlock Grid.Row="1" Text="API Key" VerticalAlignment="Center" />
        <TextBlock Grid.Row="3" Text="Model Name" VerticalAlignment="Center" />
        <TextBlock Grid.Row="4" Text="Prompt Template" VerticalAlignment="Center" />
        <TextBlock Grid.Row="5" Text="History Length" VerticalAlignment="Center" />
        <TextBlock Grid.Row="6" Text="Chat History" VerticalAlignment="Center" />

        <TextBox x:Name="tbAPIURL" Grid.Row="0" Grid.Column="2" Style="{DynamicResource StandardTextBoxStyle}"
                 FontSize="16" Text="https://localhost:11434/"
                 ToolTip="API URL to access models (e.g., OpenAI or other custom URLs)." Margin="0,5,0,5" />

        <TextBox x:Name="tbAPIKey" Grid.Row="1" Grid.Column="2" Style="{DynamicResource StandardTextBoxStyle}"
                 FontSize="16" pu:TextBoxHelper.Watermark="Enter API Key here"
                 ToolTip="Your API key for authentication." VerticalAlignment="Top" Margin="0,2,0,0" />

        <TextBox x:Name="tbProxy" Grid.Row="2" Grid.Column="2" Style="{DynamicResource StandardTextBoxStyle}"
                 FontSize="16" pu:TextBoxHelper.Watermark="Optional Proxy URL" 
                 ToolTip="Optional Proxy Server URL (e.g., HTTP/SOCKS proxy)." VerticalAlignment="Top" Margin="0,2,0,0" />

        <ComboBox x:Name="cbModel" Style="{DynamicResource StandardComboBoxStyle}" Grid.Row="3" Grid.Column="2"
                  IsEditable="True" Margin="0,5,0,5" ToolTip="Select or add a model name dynamically." />

        <TextBox x:Name="tbPromptTemplate" Grid.Row="4" Grid.Column="2" Style="{DynamicResource StandardTextBoxStyle}"
                 FontSize="16" pu:TextBoxHelper.Watermark="Enter default prompt"
                 ToolTip="Template for initializing prompts." AcceptsReturn="True" TextWrapping="WrapWithOverflow"
                 Height="Auto" MaxHeight="100" VerticalScrollBarVisibility="Visible" Margin="0,5,0,5" />

        <pu:NumberInput x:Name="niHistoryLength" Grid.Row="5" Grid.Column="2" Value="10" Minimum="0"
                        ToolTip="Maximum chat history entries to retain." VerticalAlignment="Center" />

        <TextBox x:Name="tbChatHistory" Grid.Row="6" Grid.Column="2" Style="{DynamicResource StandardTextBoxStyle}"
                 FontSize="16" Text="[]" TextWrapping="WrapWithOverflow"
                 ToolTip="Previous chat logs (read-only)." Height="Auto" VerticalScrollBarVisibility="Visible"
                 AcceptsReturn="True" MaxHeight="200" Margin="0,5,0,5" IsReadOnly="True" />

        <Button x:Name="btnSave" pu:ButtonHelper.CornerRadius="4" Content="Save Settings" Margin="4,4,4,4"
                Grid.Column="2" Background="{DynamicResource SecondaryLight}" Padding="1" Grid.Row="11"
                Click="btnSave_Click" />
    </Grid>
</Window>
